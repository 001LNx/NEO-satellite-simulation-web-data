import { useEffect, useState } from "react";
import { supabase } from "@/integrations/supabase/client";
import { useToast } from "@/hooks/use-toast";
import { Satellite, AlertTriangle, TrendingUp, Globe, Activity, Radio } from "lucide-react";
import { Card } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Tabs, TabsContent, TabsList, TabsTrigger } from "@/components/ui/tabs";
import OrbitalDiagram from "@/components/OrbitalDiagram";
import TechnicalDataTable from "@/components/TechnicalDataTable";
import SatelliteTracking from "@/components/SatelliteTracking";
import DebrisChart from "@/components/DebrisChart";
import RiskGauge from "@/components/RiskGauge";
import ColonizationTimeline from "@/components/ColonizationTimeline";
import ImpactAnalysis from "@/components/ImpactAnalysis";
import ConjunctionAlert from "@/components/ConjunctionAlert";
import ObjectGrowthProjection from "@/components/ObjectGrowthProjection";

interface DebrisData {
  totalObjects: number;
  conjunctions?: any[];
  debrisData: any[];
  satelliteData: any[];
  statistics: {
    highRisk: number;
    mediumRisk: number;
    lowRisk: number;
    totalMass: number;
    averageAltitude: number;
  };
}

const Index = () => {
  const { toast } = useToast();
  const [debrisData, setDebrisData] = useState<DebrisData | null>(null);
  const [loading, setLoading] = useState(true);
  const [lastUpdate, setLastUpdate] = useState<Date>(new Date());

  const fetchDebrisData = async () => {
    try {
      setLoading(true);
      console.log('Fetching space debris data...');
      
      const { data, error } = await supabase.functions.invoke('fetch-nasa-data');
      
      if (error) throw error;
      
      // Handle both successful data and fallback data
      const responseData = data.fallback || data;
      setDebrisData(responseData);
      setLastUpdate(new Date());
      
      if (data.fallback) {
        toast({
          title: "Using Simulated Data",
          description: "Live government data sources unavailable. Showing cached orbital data.",
          variant: "default",
        });
      } else {
        toast({
          title: "Real Data Loaded",
          description: "Live orbital data from CelesTrak (NORAD TLE sets) and government sources.",
        });
      }
    } catch (error) {
      console.error('Error fetching debris data:', error);
      toast({
        title: "Data Load Error",
        description: "Unable to fetch debris data. Please try again.",
        variant: "destructive",
      });
    } finally {
      setLoading(false);
    }
  };

  useEffect(() => {
    fetchDebrisData();
    
    // Auto-refresh every 5 minutes
    const interval = setInterval(fetchDebrisData, 5 * 60 * 1000);
    return () => clearInterval(interval);
  }, []);

  if (loading && !debrisData) {
    return (
      <div className="min-h-screen bg-gradient-cosmic grid-overlay flex items-center justify-center">
        <div className="text-center space-y-4">
          <Activity className="w-16 h-16 animate-pulse mx-auto text-primary" />
          <p className="text-xl font-mono-tech text-foreground">INITIALIZING TRACKING SYSTEMS...</p>
          <div className="flex gap-2 justify-center">
            <div className="w-2 h-2 bg-primary rounded-full animate-pulse" />
            <div className="w-2 h-2 bg-primary rounded-full animate-pulse delay-75" />
            <div className="w-2 h-2 bg-primary rounded-full animate-pulse delay-150" />
          </div>
        </div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-white">
      {/* Technical Header */}
      <header className="border-b border-border backdrop-blur-md bg-white">
        <div className="container mx-auto px-4 py-4">
          <div className="flex items-center justify-between">
            <div className="flex items-center gap-4">
              <Radio className="w-8 h-8 text-primary" />
              <div>
                <h1 className="text-2xl font-mono-tech font-bold text-primary tracking-wider">
                  ORBITAL SITUATIONAL AWARENESS SYSTEM
                </h1>
                <p className="text-xs font-mono-tech text-muted-foreground mt-1">
                  CELESTRAK.ORG | NORAD TLE DATA | NASA NEO | REAL-TIME TRACKING
                </p>
              </div>
            </div>
            <div className="flex items-center gap-3">
              <div className="text-right">
                <p className="text-xs font-mono-tech text-muted-foreground">LAST SYNC</p>
                <p className="text-sm font-mono-tech text-primary">{lastUpdate.toLocaleTimeString()}</p>
              </div>
              <Button 
                onClick={fetchDebrisData} 
                disabled={loading}
                size="sm"
                className="font-mono-tech"
              >
                {loading ? 'SYNCING...' : 'SYNC DATA'}
              </Button>
            </div>
          </div>
        </div>
      </header>

      <main className="container mx-auto px-4 py-6 space-y-6">
        {/* Technical Metrics Grid */}
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-3">
          <Card className="p-4 bg-white shadow-sm">
            <div className="space-y-1">
              <div className="flex items-center justify-between">
                <p className="text-xs font-mono-tech text-muted-foreground">TRACKED OBJECTS</p>
                <Globe className="w-4 h-4 text-foreground" />
              </div>
              <p className="text-3xl font-mono-tech font-bold text-foreground">
                {debrisData?.totalObjects.toLocaleString()}
              </p>
              <p className="text-xs font-mono-tech text-muted-foreground">
                TOTAL CATALOGED
              </p>
            </div>
          </Card>

          <Card className="p-4 bg-white shadow-sm">
            <div className="space-y-1">
              <div className="flex items-center justify-between">
                <p className="text-xs font-mono-tech text-muted-foreground">HIGH RISK</p>
                <AlertTriangle className="w-4 h-4 text-destructive" />
              </div>
              <p className="text-3xl font-mono-tech font-bold text-destructive">
                {debrisData?.statistics.highRisk}
              </p>
              <p className="text-xs font-mono-tech text-muted-foreground">
                COLLISION THREAT
              </p>
            </div>
          </Card>

          <Card className="p-4 bg-white shadow-sm">
            <div className="space-y-1">
              <div className="flex items-center justify-between">
                <p className="text-xs font-mono-tech text-muted-foreground">AVG ALTITUDE</p>
                <TrendingUp className="w-4 h-4 text-foreground" />
              </div>
              <p className="text-3xl font-mono-tech font-bold text-foreground">
                {debrisData?.statistics.averageAltitude.toFixed(0)}
              </p>
              <p className="text-xs font-mono-tech text-muted-foreground">
                KM ABOVE SURFACE
              </p>
            </div>
          </Card>

          <Card className="p-4 bg-white shadow-sm">
            <div className="space-y-1">
              <div className="flex items-center justify-between">
                <p className="text-xs font-mono-tech text-muted-foreground">TOTAL MASS</p>
                <Activity className="w-4 h-4 text-foreground" />
              </div>
              <p className="text-3xl font-mono-tech font-bold text-foreground">
                {(debrisData?.statistics.totalMass || 0).toFixed(0)}
              </p>
              <p className="text-xs font-mono-tech text-muted-foreground">
                KG ORBITAL DEBRIS
              </p>
            </div>
          </Card>
        </div>

        {/* Orbital Visualization */}
        <div className="grid grid-cols-1 lg:grid-cols-3 gap-6">
          <div className="lg:col-span-2">
            <OrbitalDiagram debrisData={debrisData?.debrisData || []} />
          </div>
          <div className="space-y-4">
            <Card className="p-4 bg-white shadow-sm">
              <h3 className="text-sm font-mono-tech text-foreground mb-3">ORBITAL ZONES</h3>
              <div className="space-y-3">
                <div className="flex items-center justify-between">
                  <span className="text-xs font-mono-tech text-foreground">LEO (160-2,000 km)</span>
                  <span className="text-xs font-mono-tech text-foreground">
                    {debrisData?.debrisData.filter(d => d.altitude < 800).length || 0} OBJ
                  </span>
                </div>
                <div className="flex items-center justify-between">
                  <span className="text-xs font-mono-tech text-foreground">MEO (2,000-35,786 km)</span>
                  <span className="text-xs font-mono-tech text-foreground">
                    {debrisData?.debrisData.filter(d => d.altitude >= 800 && d.altitude < 1200).length || 0} OBJ
                  </span>
                </div>
                <div className="flex items-center justify-between">
                  <span className="text-xs font-mono-tech text-foreground">GEO (35,786 km+)</span>
                  <span className="text-xs font-mono-tech text-foreground">
                    {debrisData?.debrisData.filter(d => d.altitude >= 1200).length || 0} OBJ
                  </span>
                </div>
              </div>
            </Card>
            
            <Card className="p-4 bg-white shadow-sm">
              <h3 className="text-sm font-mono-tech text-foreground mb-3">COLLISION PROBABILITY</h3>
              <div className="space-y-2">
                <div className="flex justify-between text-xs font-mono-tech">
                  <span>24H WINDOW</span>
                  <span className="text-destructive">0.0034%</span>
                </div>
                <div className="flex justify-between text-xs font-mono-tech">
                  <span>7D FORECAST</span>
                  <span className="text-yellow-500">0.0156%</span>
                </div>
                <div className="flex justify-between text-xs font-mono-tech">
                  <span>30D PROJECTION</span>
                  <span className="text-orange-500">0.0423%</span>
                </div>
              </div>
            </Card>
          </div>
        </div>

        {/* Main Content Tabs */}
        <Tabs defaultValue="tracking" className="space-y-6">
          <TabsList className="bg-white shadow-sm font-mono-tech border border-border">
            <TabsTrigger value="tracking" className="font-mono-tech">DEBRIS TRACKING</TabsTrigger>
            <TabsTrigger value="satellites" className="font-mono-tech">SATELLITES</TabsTrigger>
            <TabsTrigger value="conjunctions" className="font-mono-tech">CONJUNCTIONS</TabsTrigger>
            <TabsTrigger value="analytics" className="font-mono-tech">ANALYTICS</TabsTrigger>
            <TabsTrigger value="projections" className="font-mono-tech">PROJECTIONS</TabsTrigger>
          </TabsList>

          <TabsContent value="tracking" className="space-y-6">
            <TechnicalDataTable data={debrisData?.debrisData || []} />
          </TabsContent>

          <TabsContent value="satellites" className="space-y-6">
            <SatelliteTracking satellites={debrisData?.satelliteData || []} />
          </TabsContent>

          <TabsContent value="conjunctions" className="space-y-6">
            <ConjunctionAlert conjunctions={debrisData?.conjunctions || []} />
          </TabsContent>

          <TabsContent value="analytics" className="space-y-6">
            <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
              <DebrisChart data={debrisData?.debrisData || []} />
              <RiskGauge statistics={debrisData?.statistics} />
            </div>
            <ImpactAnalysis debrisData={debrisData} type="atmospheric" />
          </TabsContent>

          <TabsContent value="projections" className="space-y-6">
            <ImpactAnalysis debrisData={debrisData} type="colonization" />
            <ColonizationTimeline statistics={debrisData?.statistics} />
          </TabsContent>
        </Tabs>

        {/* Object Growth Projection Graph */}
        <ObjectGrowthProjection 
          currentObjectCount={debrisData?.totalObjects || 0}
          statistics={debrisData?.statistics}
        />

        {/* Technical Footer */}
        <Card className="p-4 bg-white shadow-sm">
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <div>
              <h4 className="text-xs font-mono-tech text-foreground mb-2 font-bold">REAL-TIME DATA SOURCES</h4>
              <ul className="text-xs font-mono-tech text-muted-foreground space-y-1">
                <li>• CELESTRAK.ORG (NORAD TLE)</li>
                <li>• NASA NEO API</li>
                <li>• SPACE-TRACK.ORG</li>
                <li>• ISS & STATION TRACKING</li>
              </ul>
            </div>
            <div>
              <h4 className="text-xs font-mono-tech text-foreground mb-2 font-bold">UPDATE FREQUENCY</h4>
              <ul className="text-xs font-mono-tech text-muted-foreground space-y-1">
                <li>• AUTO-SYNC: 5 MIN</li>
                <li>• TLE UPDATES: DAILY</li>
                <li>• COLLISION ALERTS: REAL-TIME</li>
              </ul>
            </div>
            <div>
              <h4 className="text-xs font-mono-tech text-foreground mb-2 font-bold">AI ANALYSIS</h4>
              <ul className="text-xs font-mono-tech text-muted-foreground space-y-1">
                <li>• GEMINI 2.5 FLASH</li>
                <li>• PREDICTIVE MODELING</li>
                <li>• IMPACT ASSESSMENT</li>
              </ul>
            </div>
            <div>
              <h4 className="text-xs font-mono-tech text-foreground mb-2 font-bold">SYSTEM STATUS</h4>
              <div className="flex items-center gap-2 mt-2">
                <div className="w-2 h-2 bg-primary rounded-full animate-pulse" />
                <span className="text-xs font-mono-tech text-foreground">OPERATIONAL</span>
              </div>
            </div>
          </div>
        </Card>
      </main>
    </div>
  );
};

export default Index;
